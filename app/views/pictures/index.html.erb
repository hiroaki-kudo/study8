<h1>InstaClone</h1>
    <table>
      <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th>投稿者</th>
      </tr>
        <% @picture.each do |picture| %>
          <tr>
            <td><%= picture.title %></td>
            <td><%= picture.content %></td>
            <td><%= picture.user.name %></td>
            <td><%= link_to '詳細情報へ', picture_path(picture.id) %></td>
            <td><%= link_to '編集情報へ', edit_picture_path(picture.id) %></td>
            <td><%= link_to '削除する', picture_path(picture.id), method: :delete %></td>
          </tr>
        <% end %>
    </table>
    <%= link_to '作成画面へ', new_picture_path %>
