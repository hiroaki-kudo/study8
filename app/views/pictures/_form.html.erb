<%= form_with(model: @picture , local: true, url: choose_new_or_edit ) do |form| %>
  <div class="picture_title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div class="picture_content">
    <%= form.label :content %>
    <%= form.text_field :content%>
  </div>
  <%= form.submit %>
<% end %>
<%= link_to '一覧画面へ', pictures_path %>
