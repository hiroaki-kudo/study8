<h1>新規登録</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model:@user, local:true) do |user| %>
  <%= user.label :name %>
  <%= user.text_field :name %>
  <%= user.label :email %>
  <%= user.email_field :email %>
  <%= user.label :password %>
  <%= user.password_field :password %>
  <%= user.label :password_confirmation %>
  <%= user.password_field :password_confirmation %>
  <div class="field">
    <%= user.label :image %>
    <%= user.file_field :image %>
  </div>
  <%= user.submit "Create my account" %>
<% end %>
